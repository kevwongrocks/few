<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/set_attack"
    android:background="@drawable/bg_attack">

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:splitMotionEvents="false"
    android:clipChildren="false" >
    
    <LinearLayout
        android:id="@+id/enemy_seq"
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:gravity="center"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/es1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sbtn_null" />
        
        <ImageView
            android:id="@+id/es2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sbtn_null" />
        
        <ImageView
            android:id="@+id/es3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sbtn_null" />
        
        <ImageView
            android:id="@+id/es4"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sbtn_null" />
        
        <ImageView
            android:id="@+id/es5"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sbtn_null" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/enemy_stats"
        android:layout_width="fill_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
            	android:textStyle="bold"
                android:text="HEALTH" />
            
            <TextView
                android:id="@+id/p2_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="#100" />
                
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
            	android:textStyle="bold"
                android:text="ARMOR" />
            
            <TextView
                android:id="@+id/p2_armour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="100" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/player_avatar"
        android:layout_width="fill_parent"
        android:layout_height="193dp"
        android:orientation="horizontal"></LinearLayout>
    
    <LinearLayout
        android:id="@+id/player_stats"
        android:layout_width="fill_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
            	android:textStyle="bold"
                android:text="HEALTH" />
            
            <TextView
                android:id="@+id/p1_health"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="#100" />
                
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
            	android:textStyle="bold"
                android:text="ARMOR" />
            
            <TextView
                android:id="@+id/p1_armour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="100" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/player_seq"
        android:layout_width="fill_parent"
        android:layout_height="37dp"
        android:gravity="center"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/ps1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sbtn_null" />
        
        <ImageView
            android:id="@+id/ps2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sbtn_null" />
        
        <ImageView
            android:id="@+id/ps3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sbtn_null" />
        
        <ImageView
            android:id="@+id/ps4"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sbtn_null" />
        
        <ImageView
            android:id="@+id/ps5"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/sbtn_null" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:clipChildren="false"
        android:paddingTop="40dp" >

        <Button
            android:id="@+id/buttonFire"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="7dp"
            android:background="@drawable/btn_fire"
            android:text="FIRE"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />
        
        <Button
            android:id="@+id/buttonEarth"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="7dp"
            android:background="@drawable/btn_earth"
            android:text="EARTH"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonWater"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="7dp"
            android:background="@drawable/btn_water"
            android:text="WATER"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>

</FrameLayout>