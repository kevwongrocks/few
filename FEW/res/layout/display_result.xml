<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/attackSequenceTitle"
	        android:layout_width="140dp"
	        android:layout_height="wrap_content"
	        android:text="p1 Attack - "
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
	    <TextView
	        android:id="@+id/attackSequence"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="attackSequence"
        	android:textAppearance="?android:attr/textAppearanceLarge" />
    
    </LinearLayout>
    
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/cpuAttackSequenceTitle"
	        android:layout_width="140dp"
	        android:layout_height="wrap_content"
	        android:text="p2 Attack - "
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
	    <TextView
	        android:id="@+id/cpuAttackSequence"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="cpuAttackSequence"
        	android:textAppearance="?android:attr/textAppearanceLarge" />
    
    </LinearLayout>
    
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/compareAtkTitle"
	        android:layout_width="140dp"
	        android:layout_height="wrap_content"
	        android:text="Compare Atk - "
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
	    <TextView
	        android:id="@+id/compareAtk"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="compareAtk"
        	android:textAppearance="?android:attr/textAppearanceLarge" />
    
    </LinearLayout>
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/p1HealthTitle"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="P1 Health"
	        android:gravity="center"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
	    <TextView
	        android:id="@+id/p2HealthTitle"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="P2 Health"
	        android:gravity="center"
        	android:textAppearance="?android:attr/textAppearanceLarge" />
    
    </LinearLayout>
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

	    <TextView
	        android:id="@+id/p1Health"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="36"
	        android:gravity="center"
	        android:textSize="40sp" />
	    
	    <TextView
	        android:id="@+id/p2Health"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="45"
	        android:gravity="center"
        	android:textSize="40sp" />
    
    </LinearLayout>
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center" >

	    <Button
	        android:id="@+id/nextRound"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="40dp"
	        android:text="Next Round"
	        android:textSize="20sp" />
	    
	    <TextView
	        android:id="@+id/status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="STATUS MESSAGE"
	        android:textSize="40sp" />	        
	        
	    <Button
	        android:id="@+id/restart"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Play Again?"
	        android:textSize="20sp" />
	    
    </LinearLayout>
    
</LinearLayout>
