<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_result"
    android:id="@+id/top_frame" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipChildren="false"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/p2_seq"
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/es1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sbtn_null" />

            <ImageView
                android:id="@+id/es2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sbtn_null" />

            <ImageView
                android:id="@+id/es3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sbtn_null" />

            <ImageView
                android:id="@+id/es4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sbtn_null" />

            <ImageView
                android:id="@+id/es5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sbtn_null" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/p2_stats"
            android:layout_width="fill_parent"
            android:layout_height="74dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HEALTH"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/p2_health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#100"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARMOR"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/p2_armour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/enemy_avatar"
            android:layout_width="fill_parent"
            android:layout_height="185dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center">
            
            	<ImageView
            	    android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:layout_gravity="center"
            	    android:background="@drawable/avatar_p2" />
            
            </LinearLayout>
        
        <LinearLayout
            android:id="@+id/player_avatar"
            android:layout_width="fill_parent"
            android:layout_height="185dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center">
            	
            <ImageView
           	    android:layout_width="wrap_content"
           	    android:layout_height="wrap_content"
           	    android:layout_gravity="center"
           	    android:background="@drawable/avatar_p1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/player_stats"
            android:layout_width="fill_parent"
            android:layout_height="74dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HEALTH"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/p1_health"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#100"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARMOR"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/p1_armour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/p1_seq"
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ps1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sbtn_null" />

            <ImageView
                android:id="@+id/ps2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sbtn_null" />

            <ImageView
                android:id="@+id/ps3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sbtn_null" />

            <ImageView
                android:id="@+id/ps4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sbtn_null" />

            <ImageView
                android:id="@+id/ps5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sbtn_null" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="111dp">
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="370dp">
            
            <LinearLayout
                android:id="@+id/p2_results_area"
                android:layout_width="0dp"
            	android:layout_height="fill_parent"
            	android:layout_weight="1"
            	android:gravity="center"
            	android:paddingBottom="100dp"
            	android:paddingRight="50dp"
            	android:orientation="vertical">
                
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/p1_results_area"
                android:layout_width="0dp"
            	android:layout_height="fill_parent"
            	android:layout_weight="1"
            	android:gravity="bottom"
            	android:paddingBottom="100dp"
            	android:paddingLeft="50dp"
            	android:orientation="vertical">
                
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical">
        
        <Button
	        android:id="@+id/nextRound"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="95dp"
	        android:text="Next Round"
	        android:layout_gravity="center"
	        android:textSize="20sp" />
	
	    <TextView
	        android:id="@+id/status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Status"
	        android:layout_gravity="center_horizontal"
	        android:textSize="40sp" />
	
	    <Button
	        android:id="@+id/restart"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Play Again?"
	        android:layout_gravity="center_horizontal"
	        android:textSize="20sp" />
        
    </LinearLayout>

</FrameLayout>